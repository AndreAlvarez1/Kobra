document.addEventListener("turbolinks:load", function(){

  $(".modal-body").on("focusin", '#event_start', function(){
   $(this).datetimepicker({
     icons: {
             time: 'fa fa-clock-o',
             date: 'fa fa-calendar',
             up: 'fa fa-chevron-up',
             down: 'fa fa-chevron-down',
             previous: 'fa fa-chevron-left',
             next: 'fa fa-chevron-right',
             today: 'fa fa-calendar-check-o',
             clear: 'fa fa-trash-o',
             close: 'fa fa-close'
           },
           format: 'YYYY-MM-DD HH:mm: Z'

     });
   });

   $(".modal-body").on("focusin", '#event_end', function(){
    $(this).datetimepicker({
      icons: {
              time: 'fa fa-clock-o',
              date: 'fa fa-calendar',
