<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Detail</th>
      <th>Price</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.detail %></td>
        <td><%= product.price %></td>
        <td><%= product.category %></td>
        <% if params[:buyer_id].present?%>
        <td><%= link_to 'Agregar', buyer_orders_path(product: product.id), method: :post, class:"btn btn-primary" %></td>
        <% end %>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product', new_product_path %>






<% if params[:buyer_id].present?%>

<button class="btn black btn-lg btn-block fixed-bottom" data-toggle="modal" data-target="#canasta"><%= @cantidad %> | Ver Canasta | $<%= @total %> |</button>


<div class="modal" id="canasta">
  <div class="bottom white b-t" style="height:240px">

      <table class="table">
        <% @orders.each do |order| %>
        <tr>
        <td><%= order.buyer.first_name + ' ' + order.buyer.last_name %></td>
        <td><%= order.product.name%></td>
        <td><%= order.product.price%></td>
        <td><%= order.status%></td>
        <tr>
        <% end %>
        </table>
      <% end %>




  </div>
</div>
