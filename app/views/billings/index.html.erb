<h1>Billings</h1>
<div class="row">
<div class="col-sm-12">
  <table id="billingsTable" class="table table-striped table-hover table-responsive-md ">
    <thead>
      <tr>
        <th>Id</th>
        <th>Cliente</th>
        <th>Creado</th>
        <th class="d-none d-md-block">Cantidad de productos</th>
        <th>Status</th>
      </tr>
    </thead>

    <tbody>
    <% @billings.each do |billing| %>
      <tr>
        <td>  #<%= billing.id %></td>
        <td>  <%= billing.buyer.first_name %> <%= billing.buyer.last_name %></td>
        <td>  <%= billing.created_at.strftime(" %d-%m-%y ") %></td>
        <td>  <%= billing.orders.count %></td>
        <td>  <%= billing.status %></td>
      </tr>
    <% end %>
    </tbody>
</table>



</div>
</div>
