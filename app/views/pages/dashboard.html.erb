    </div>

    <div class="col-12 col-md-5 col-lg-4 margen-cel">
      <h1> <%= image_tag 'kobra_black.svg', class:"icono" %><%= number_to_currency(@orders_not_paid_amount, precision: 0, seperator: ",", delimiter: ".") %></h1>
      <p>Kobros pendientes de pago</p>
    </div>
  </div>

  <%= @months %>
  <%= @on_basquet_amounts %>
  <%= @not_paid_amounts %>
